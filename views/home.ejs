<% layout("/layouts/boilerPlate.ejs") -%>

<main class="mm-main">
    <form class="mm-form" method="POST" action="/search">

        <!-- Business Idea -->
        <textarea
            class="mm-textarea"
            name="businessIdea"
            placeholder="Describe your business idea..."
            required
        ></textarea>

        <!-- Location Input -->
        <div class="mm-location">
            <label for="location" class="mm-label">
                Select Location
            </label>

            <input
                class="mm-input"
                type="text"
                id="location"
                name="locationName"
                placeholder="Start typing a location..."
                autocomplete="off"
                required
            />

            <!-- Suggestions -->
            <ul class="mm-suggestions" id="suggestions"></ul>
        </div>

        <!-- Map -->
        <div class="mm-map-wrapper">
            <div id="map" class="mm-map">
                Map will appear here
            </div>
        </div>

        <!-- Hidden coordinates -->
        <input type="hidden" name="latitude" id="latitude">
        <input type="hidden" name="longitude" id="longitude">

        <button class="mm-btn" type="submit">
            Analyze your idea
        </button>

    </form>
</main>
